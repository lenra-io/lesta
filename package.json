    "@types/minify": "^9.0.0",
    "@types/pug": "^2.0.6"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lenra-io/lesta.git"
  },
